<h3>Kitchen Food Items</h3>
<div>
  <%= link_to "New Food", new_food_item_path, data: { turbo_frame: 'modal' } %>
</div>
<div class='flex flex-col'>
  <h5>Pantry</h5>
  <div id="pantry" class='flex flex-wrap'>
    <% @pantry_items.each do |food_item| %>
      <%= render "food_item",{ food_item: food_item, editable: true } %>
    <% end %>
  </div>
</div>
<div  class='flex flex-col'>
  <h5>Fridge</h5>
  <div id="fridge" class='flex flex-wrap'>
    <% @fridge_items.each do |food_item| %>
      <%= render "food_item", { food_item: food_item, editable: true } %>
    <% end %>
  </div>
</div>
