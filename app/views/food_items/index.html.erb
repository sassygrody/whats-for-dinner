<div class='inner-container'>
  <section class='col'>
    <h2 class="subtitle">Weekly Meals</h2>
    <div class='weekly-meals'>
      <% DailyPlan.all.each do |daily_plan|%>
        <div class='day'>
          <p><%= daily_plan.date.strftime('%A %m/%d/%y') %></p>
          <% daily_plan.meals.each do |meal|%>
            <p><%= meal.name %></p>
            <div class='meal'>
              <% meal.food_items.each do |food_item| %>
                <div class='food-item'><%= food_item.name %><%= fa_icon icon(food_item)%></div>
              <% end %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </section>
  <section class="col kitchen">
    <h2 class="subtitle">Kitchen Food Items</h2>
    <div class='pantry'>
      <h3>Pantry</h3>
      <% @pantry_items.each do |food_item| %>
        <div class='food-item'><%= food_item.name %><%= fa_icon icon(food_item)%></div>
      <% end %>
    </div>
    <div class='fridge'>
      <h3>Fridge</h3>
      <% @fridge_items.each do |food_item| %>
        <div class='food-item'><%= food_item.name %><%= fa_icon icon(food_item)%></div>
      <% end %>
    </div>
  </section>
</div>
