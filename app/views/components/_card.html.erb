<div class='meal sm:w-1/2 md:w-1/3 pr-4 pb-8'>
  <h5>
    <%= daily_plan.date.strftime("%A %m/%d/%y") %>
  </h5>
  <div>
    <% daily_plan.meals.each do |meal|%>
      <h6 class="uppercase"><%= meal.name %></h6>
      <div class='flex'>
        <% meal.food_items.each do |food_item| %>
          <%= render "food_item", {food_item: food_item, editable: false} %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
